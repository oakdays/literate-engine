<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.global.oakdays.udacityportfolio.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/main_title"/>

    <Button
        android:id="@+id/btn_movies"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/popular_movies"/>

    <Button
        android:id="@+id/btn_hawk"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/stock_hawk"/>

    <Button
        android:id="@+id/btn_bib"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/build_it_bigger"/>

    <Button
        android:id="@+id/btn_myam"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/make_your_app_material"/>

    <Button
        android:id="@+id/btn_goubi"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/go_ubiquitous"/>

    <Button
        android:id="@+id/btn_capstone"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/capstone"/>

</LinearLayout>
